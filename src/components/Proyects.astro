---
import projects from "../content/projects.json";
import { Icon } from "astro-icon/components";
---

<style>
  .line-select {
    position: relative;
  }

  .line-select::after {
    position: absolute;
    content: "";
    width: 0%;
    height: 2px;
    background-color: currentColor;
    left: 0;
    bottom: -2px;
    transition: width 0.5s ease;
  }
  .line-select:hover::after {
    width: 100%;
  }
</style>
<section class="mb-20">
  <div class="cyber-line mb-10">
    <h2
      class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-cyan-400 mono"
    >
      [02] Proyectos<span class="hidden md:inline">_destacados</span>
    </h2>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    {
      projects.map((project, index) => (
        <div class="holo-card neon-border rounded-2xl p-8 group flex flex-col">
          <div class="mono text-purple-400 text-xs mb-3">
            PROYECTO_{index + 1}
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">{project.name}</h3>
          <p class="text-gray-300 leading-relaxed mb-6">
            {project.description}
          </p>
          <div class="flex-1  ">
            <div class="flex flex-wrap gap-2 mb-6  ">
              {project.tech.map((tech) => (
                <span class="tech-tag mono bg-slate-900/70 text-cyan-300 px-3 py-2 rounded-md text-xs font-medium border border-purple-500/30 flex items-center gap-2">
                  {tech.icon && <Icon name={tech.icon} />}
                  {tech.name}
                </span>
              ))}
            </div>
          </div>
          <div class="flex items-center gap-4 md:gap-6">
            <a
              href={project.code}
              class="line-select inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 font-semibold text-sm mono group/link"
              target="_blank"
            >
              &gt; Ver_c√≥digo
            </a>

            {project.production && (
              <a
                href={project.production}
                class="line-select inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 font-semibold text-sm mono group/link"
                target="_blank"
              >
                &gt; Ver_Proyecto
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
