---
import experience from "../content/experiences.json";
---
<section class="mb-20">
        <div class="cyber-line mb-10">
          <h2
            class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-cyan-400 mono"
          >
            [02] Experiencia
          </h2>
        </div>
        <div class="space-y-6">
          {
            experience.map((exp, index) => (
              <div class="holo-card neon-border rounded-2xl p-8 relative group">
                <div class="absolute top-4 right-4 mono text-purple-400 text-xs opacity-50">
                  EXP_{index + 1}
                </div>
                <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4 gap-2">
                  <h3 class="text-2xl font-bold text-white">{exp.position}</h3>
                  <span class="mono text-sm font-medium text-cyan-400 bg-cyan-950/50 px-4 py-2 rounded-full border border-cyan-500/30">
                    {exp.period}
                  </span>
                </div>
                <div class="text-purple-300 font-semibold mb-4 mono">
                  &gt; {exp.company}
                </div>
                <p class="text-gray-300 leading-relaxed">{exp.description}</p>
              </div>
            ))
          }
        </div>
      </section>